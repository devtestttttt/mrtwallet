{
    "manifest_version": 3,
    "name": "MRT Wallet",
    "version": "1.0",
    "description": "MRT Wallet Chrome extension.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      },
      "browser_style": true
    },
    "icons": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tabs"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
    },
    "web_accessible_resources": [{
      "resources": ["canvaskit/canvaskit.wasm","canvaskit/skwasm.wasm","canvaskit/chromium/canvaskit.wasm","assets/assets/wasm/crypto.wasm","page.js"],
      "matches": ["<all_urls>"]
    }],

    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "world":"ISOLATED"
      },
      {
        "world": "MAIN",
        "matches": ["<all_urls>"],
        "js": ["page.js"]
      }
    ],
    "background": {
      "scripts": ["background.js"]
    }
  }
  